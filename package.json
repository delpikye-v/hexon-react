{
  "name": "hexon-react-z",
  "version": "1.0.0",
  "description": "React adapter for hexon (DDD-lite core)",
  "license": "MIT",
  "author": "Delpi.Kye",

  "sideEffects": false,

  "main": "build/index.cjs",
  "module": "build/index.esm.js",
  "types": "build/index.d.ts",

  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.esm.js",
      "require": "./build/index.cjs"
    }
  },

  "files": [
    "build"
  ],

  "scripts": {
    "clean": "rimraf build",
    "build": "rollup -c",
    "cb": "npm run clean && npm run build",
    "prepublishOnly": "npm run build"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/delpikye-v/hexon-react.git"
  },
  "homepage": "https://github.com/delpikye-v/hexon-react#readme",
  "bugs": {
    "url": "https://github.com/delpikye-v/hexon-react/issues"
  },

  "keywords": [
    "hexon",
    "hexagonal-architecture",
    "clean-architecture",
    "ddd",
    "domain-driven-design",
    "react",
    "react-hooks",
    "usecase",
    "application-layer",
    "architecture"
  ],

  "peerDependencies": {
    "react": ">=17"
  },

  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@types/react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "hexon": "^1.0.0"
  }
}
